generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  STAFF      // Angestellter
  MANAGER
  ADMIN
}

enum UserRole {
  CUSTOMER
  ADMIN
  STAFF
}

model User {
  id         String    @id @default(uuid())
  email      String    @unique
  password   String
  firstName  String?
  lastName   String?
  birthDate  DateTime?
  role       UserRole  @default(CUSTOMER)
  isVerified     Boolean  @default(false)
  verificationToken String?
  refreshToken   String?
  resetPasswordToken     String?   // Einmaliger Reset-Token
  resetPasswordExpires   DateTime? // Ablaufdatum (z.â€¯B. 1h)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
 
}